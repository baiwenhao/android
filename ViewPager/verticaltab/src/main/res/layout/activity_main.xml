<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/purple_700"
    tools:context=".MainActivity">

    <!-- 左边 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="195dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/show"
            android:text="@string/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 中间 -->
    <RelativeLayout
        android:id="@+id/middle"
        android:layout_width="140dp"
        android:layout_height="match_parent">

        <!-- 白色背景 -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="130dp"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:orientation="horizontal" />

        <!-- 选中样式 -->
        <RelativeLayout
            android:id="@+id/active"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-30dp"
            tools:ignore="MissingConstraints">

            <!-- 高亮背景 -->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:background="@drawable/item_style"
                android:layout_width="140dp"
                android:layout_height="140dp" />
            <!-- 阴影 -->
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:background="#fff"
                android:elevation="20dp" />

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:background="#EEBA25" />

        </RelativeLayout>

        <!-- 自定义菜单 -->
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="130dp"
            android:layout_height="560dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/i1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/i1_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/icon_start_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/i1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:height="34dp"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/i2"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/i2_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/icon_start_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/i2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:height="34dp"
                    android:gravity="center"
                    android:text="@string/textview"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <!-- 固定菜单 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/i3"
            android:layout_width="130dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/i3_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:background="@drawable/icon_config_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/i3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:height="34dp"
                android:gravity="center"
                android:text="@string/textview"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <!-- 左边 -->
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/purple_200"
        android:id="@+id/view_page" />
</LinearLayout>